<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.roomdb.ProfessorActivity">

    <EditText
        android:id="@+id/professorActivityInputName"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:hint="Имя" />

    <EditText
        android:id="@+id/professorActivityInputEmail"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:hint="Почта" />

    <Button
        android:text="Добавить"
        android:id="@+id/professorActivityBtAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/professorActivityBtListProfessors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Просмотреть всех профессоров" />

    <Button
            android:id="@+id/professorActivityBtFindByName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Искать по имени" />

        <Button
            android:text="Удалить по name"
            android:id="@+id/professorActivityBtDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>